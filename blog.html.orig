{% assign posts = site.posts %}
{% for post in posts limit: 1 %}
  <div id="post">
    <h1>{{ post.title }}</h1>
    <h2>{{ post.subtitle }}</h2>
    <span class="date">{{post.created_at | date:'%Y-%m-%d' }}</span>

    {{ post.content }}
  </div>
{% endfor %}

<ul id="posts">
{% for post in posts offset: 1 %}
  <li><a href="{{post.url}}">{{post.title}}</a></li>
{% endfor %}
</ul>

<br class="clearleft" />